<UserControl x:Class="ModiPrint.Views.PrinterViews.MicrocontrollerViews.GPIOPinView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModiPrint.Views.PrinterViews.MicrocontrollerViews"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">

    <Border Style="{DynamicResource ThematicBorder}"
            Padding="0"
            Background="{DynamicResource StandardBackground}"
            Margin="0, 0, 0, 0">
        <Grid>
            <TextBlock Text="{Binding AttachedEquipmentViewModelName}"
                       HorizontalAlignment="Stretch"
                       FontSize="{DynamicResource SmallFontSize}"
                       Style="{DynamicResource ThematicTextBlock}"/>
        </Grid>
    </Border>
   
</UserControl>
