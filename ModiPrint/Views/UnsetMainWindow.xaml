<UserControl x:Class="ModiPrint.Views.UnsetMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModiPrint.Views"
             xmlns:vControl="clr-namespace:ModiPrint.Views.ControlViews"
             mc:Ignorable="d">

    <Viewbox Stretch="Uniform">
        <StackPanel VerticalAlignment="Center">

            <Grid Margin="0, 50, 0, 50" />

            <Button Command="{Binding McCloskeyLabHyperlinkCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <vControl:OpaqueClickableImage x:Name="Image" Source="/Resources/McCloskeyLabLogo.png"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Command="{Binding McCloskeyLabHyperlinkCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <vControl:OpaqueClickableImage x:Name="Image" Source="/Resources/GithubLogo.png"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Grid Margin="0, 50, 0, 50" />

        </StackPanel>
    </Viewbox>

    
</UserControl>
